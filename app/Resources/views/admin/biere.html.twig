{% extends ":admin:index.html.twig" %}

{% block body %}
    <div class="header">
        <button><a href="{{path("ajouter")}}">Ajouter une biere</a></button>
        {%for biere in biereAdmin%}
            <section class="produits saison1">
                <div class="present-biere-left">
                    <img src="{{asset('uploads/img/')~biere.images.images}}" alt="{{biere.images}}">
                </div>
                <div class="present-txt-right">
                    <div class="container">
                        <div class="icone-hublon">
                        </div>
                        <h2>{{biere.nomsbieres}}</h2>
                        <div class="composition">
                            <p>
                                {{biere.composition}}
                            </p>
                        </div>
                        <table class="degres table table-bordered">
                            <thead>
                                <tr>
                                    <th class="separation-degres">Alcool : {{biere.degres}}%</th>
                                    <th>Amertume IBU : {{biere.amertume}}</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
                <button><a href="{{path("modif",{"id":biere.id})}}">Modifier</a></button>
                {% if biere.ajouter == 0 %}
                <button><a href="{{path("publi",{"id":biere.id})}}">Ajouter au site</a></button>
                {% else %}
                    <button><a href="{{path("supp",{"id":biere.id})}}">Supprimer du site</a></button>
                    {% endif %}
            </section>
        {%endfor%}
    </div>
{% endblock %}
