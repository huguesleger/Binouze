{% extends ":admin:index.html.twig" %}

{% block body %}
    <div class="header">
        <button><a href="{{path("addActu")}}">Ajouter une actualite</a></button>
        {%for actu in actus%}
            <div class="container">
                <div class="row">
                    <div class="actus">
                        <div class="col-sm-6 col-md-3 col-md-offset-2">
                            <img class="img-responsive" src="{{asset('uploads/img/')~actu.images.images}}" alt="{{actu.images}}">
                        </div>
                        <div class="col-sm-6 col-md-4">
                            <div class="title-actu">
                                <h3>{{actu.titre}}</h3>   
                            </div>

                            <div class="txt-actu">
                                <p>
                                    {{actu.news}}
                                </p>
                            </div>
                            <table class="infos table">
                                <thead>
                                    <tr>
                                        <th class="separation-auteur"> Publi√© le {{actu.date|date("d/m/Y")}}</th>
                                        <th> Par {{actu.auteur}}</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
                <button><a href="{{path("actumodif",{"id":actu.id})}}">Modifier</a></button>
            </div>
            <div class="separation-actus">
            </div>
        {% endfor %}
    </div>
{% endblock %}